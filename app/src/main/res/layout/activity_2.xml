<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.keerthi.mathassiss.Activity2"
    android:background="@drawable/sd">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/scroll">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/addition"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/sentenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDITION"
            android:layout_weight="0.36"
            android:textSize="30dp"
            android:paddingBottom="15dp"
            android:typeface="sans"
            android:textColor="#FFFFFF"
            android:paddingLeft="90dp"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/sentence1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addition often signified by the plus symbol is one of the four elementary, mathematical operations of arithmetic, with the others being subtraction, multiplication and division. "
            android:layout_weight="0.36"
            android:paddingBottom="10dp"
            android:textSize="22dp"
            android:typeface="sans"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/sentence2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The addition of two whole numbers is the total amout of those quantities combined"
            android:layout_weight="0.13"
            android:textSize="22dp"
            android:typeface="sans"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sentence4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For example, lets, say there are 5 apples, we add 3 more apples, then totally we have 5+3,  8 apples"
            android:layout_weight="0.28"
            android:typeface="sans"
            android:paddingBottom="10dp"
            android:textSize="22dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sentence4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXAMPLE:"
            android:layout_weight="0.28"
            android:typeface="sans"
            android:paddingBottom="10dp"
            android:textSize="22dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sentence5"
            android:layout_width="113dp"
            android:layout_height="40dp"
            android:text="1+2=3"
            android:layout_weight="0.11"
            android:textSize="22dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="4+3=7"
            android:id="@+id/textView"
            android:layout_weight="0.11"
            android:textSize="22dp"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="14+18=32"
            android:id="@+id/textView"
            android:layout_weight="0.11"
            android:textSize="22dp"
            android:textColor="#FFFFFF" />


        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:gravity="center" android:paddingTop="10dp">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="PRACTICE"
            android:id="@+id/button3"
            android:onClick="practice1"
          />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:text="TEST YOUR KNOWLEDGE"
            android:id="@+id/button6"
            android:onClick="test1"
           />
    </LinearLayout>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>
