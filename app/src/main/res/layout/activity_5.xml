<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    tools:context="com.example.keerthi.mathassiss.Activity4"
    android:background="@drawable/sd">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/scroll">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/addition"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignTop="@+id/textView2">
        <TextView
            android:id="@+id/sentenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIVISION"
            android:layout_weight="0.36"
            android:textSize="30dp"
            android:paddingBottom="15dp"
            android:paddingLeft="90dp"
            android:typeface="sans"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/sentence1"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divsion often signified by the cross symbol is one of the four elementary, mathematical operations of arithmetic, with the others being addition,subtraction and multiplication. "
            android:layout_weight="0.16"
            android:textSize="22dp"
            android:typeface="sans"
            android:textColor="#FFFFFF" />"
        android:layout_weight="1" />/>

        <TextView
            android:id="@+id/sentence2"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The division of two whole numbers is the opposite of multiplication.When we know a multiplication fact we can find a division fact "
            android:layout_weight="0.13"
            android:textSize="22dp"
            android:typeface="sans"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sentence4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example: 3x5=15, so 15/5=3"
            android:typeface="sans"
            android:paddingBottom="10dp"
            android:textSize="22dp"
            android:layout_weight="0.28"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sentence5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/3=2. Here 6 is the dividend, b is called the divisor, c is called the quotient."
            android:textSize="22dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a/b=c. Here a is the numerator and b is the denominator"
            android:id="@+id/textView"

            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center" >



            <Button
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:text="PRACTICE"
                android:id="@+id/button3"
                android:layout_weight="0.16"
                android:onClick="practice4"
              />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:text="TEST YOUR KNOWLEDGE"
                android:id="@+id/button6"
                android:layout_weight="0.16"
                android:onClick="test4"
                />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
